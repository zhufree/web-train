@import 'public';

//下拉菜单
.drop-menu {
	width: 200px;
	float: left;
	background-color: #ccc;
	span{
		display: block;
		width: 100%;
	}
	ul {
		display: none;
		background-color: #bbb;
	}
	li {
		border-bottom: 1px #fff solid;
		text-align: center;
	}
}

//第一种方法，使用无依赖绝对定位
#drop-menu1 {
	ul {
		position: absolute;
		width: 200px;
	}
	
}
#drop-menu2 {//第二种方法，使用相对定位+绝对定位
	margin-left: 200px;
	span {
		// position: relative;
		// overflow: hidden;//如果设置overflow:hidden，ul子元素会不显示
	}
	ul {
		// position: absolute;
		width: 100%;//宽度为父元素宽度
	}
}
